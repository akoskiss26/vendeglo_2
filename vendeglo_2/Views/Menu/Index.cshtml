@model IEnumerable<vendeglo_2.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Menu</h2>


<div class="panel-group" id="menu">

    @foreach (var category in Model)
    {


            //a kategória külön becsukható panelen jelenik meg
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a data-toggle="collapse" data-parent="#menu" href="#collapse_@category.Id">
                           @Html.DisplayFor(modelItem => category.Name)
                        </a>
                    </h3>
                </div>
                    <div id="collapse_@category.Id" class="panel-collapse collapse in">
                        <div class="panel-body">

                            @foreach (var innerItem in category.MenuItems)
                            {
                                <h4>
                                    @Html.DisplayFor(modelItem => innerItem.Name)
                                </h4>

                                <p>
                                    @Html.DisplayFor(modelItem => innerItem.Description)
                                </p>

                                <p>
                                    <strong>@Html.DisplayFor(modelItem => innerItem.Price)</strong>
                                </p>
                            }



                    

                        </div>
                    </div>
            </div>  //ezt nem ide kell tenni, hanem a panelon levő szöveg után

            



    }
</div>


